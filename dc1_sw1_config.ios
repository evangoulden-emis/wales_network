! Global BGP Configuration
feature bgp   ! Enable BGP feature
feature interface-vlan    ! Enable VLAN interface feature

interface loopback100
  ip address 169.254.255.1/32
  ip ospf 1 area 0
  ip ospf network point-to-point


interface Ethernet1/1
  description "DX-Connection-1-DC1" ! # Add DXCON ID
  switchport mode trunk
  switchport trunk allowed vlan 101
  bfd interval 50 min_rx 50 multiplier 5
  no shutdown

vlan 101
  name DX-VIF-1-DC1

interface vlan 101
  description "DX-VIF-1-DC1"
  ip address 169.254.1.1/30
  no shutdown

router bgp 64521
 bgp router-id 169.254.255.1
 bgp log-neighbor-changes
 bgp graceful-restart
 timers bgp 10 30
 neighbor 169.254.1.2 remote-as 64531
 neighbor 169.254.1.2 description AWS-DX-1-DC1
 neighbor 169.254.1.2 log-neighbor-changes
 neighbor 169.254.1.2 update-source Vlan101
 neighbor 169.254.1.2 fall-over bfd
 neighbor 169.254.255.2 remote-as 64522
 neighbor 169.254.255.2 update-source Loopback0
 neighbor 169.254.255.2 fall-over bfd
 neighbor 169.254.255.3 remote-as 64523
 neighbor 169.254.255.3 update-source Loopback0
 neighbor 169.254.255.3 fall-over bfd
 neighbor 169.254.255.4 remote-as 64524
 neighbor 169.254.255.4 update-source Loopback0
 neighbor 169.254.255.4 fall-over bfd

 address-family ipv4
  neighbor 169.254.1.2 activate
  neighbor 169.254.1.2 send-community both
  neighbor 169.254.1.2 maximum-prefix 100 80
  maximum-paths 4

router ospf 1
 router-id 169.254.255.1
 passive-interface default
 no passive-interface Loopback100